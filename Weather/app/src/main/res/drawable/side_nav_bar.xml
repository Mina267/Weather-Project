<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Original gradient background -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <gradient
                android:angle="135"
                android:startColor="#90caf1"
                android:centerColor="#6696de"
                android:endColor="#4b75c4"
                android:type="linear" />

        </shape>
    </item>

    <!-- White scrim overlay end "#30000000" "#30FFFFFF# -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#00000000"
                android:endColor="#50FFFFFF"
                android:type="linear" />
            <corners android:radius="16dp" />
        </shape>
    </item>

</layer-list>
